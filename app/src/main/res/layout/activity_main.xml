<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:scaleType="fitCenter"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#65c9a1"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Stw贸rz sw贸j samoch贸d:"/>

            <RadioGroup
                android:id="@+id/auto_Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4cc796"
                android:padding="10dp"
                >

                <RadioButton
                    android:id="@+id/se"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedan" />

                <RadioButton
                    android:id="@+id/su"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUV" />

                <RadioButton
                    android:id="@+id/hb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HatchBack" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4cc796"
                android:orientation="vertical">


                <CheckBox
                    android:id="@+id/kli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Klimatyzacja" />

                <CheckBox
                    android:id="@+id/skf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sk贸rzane fotele" />

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stworz"
                android:id="@+id/buton"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/zdjecie"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:contentDescription="Tu powinien pojawic sie samochod"
        android:scaleType="fitCenter"
        android:src="@drawable/tuauto"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/podsumowanie"
        />

</LinearLayout>